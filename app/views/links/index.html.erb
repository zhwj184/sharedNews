<h1>Listing links</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Url</th>
    <th>Content</th>
    <th>Gmt created</th>
    <th>View</th>
    <th>Gmt modified</th>
    <th>Catid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.id %></td>
    <td><%= link.name %></td>
    <td><%= link.url %></td>
    <td><%= link.content %></td>
    <td><%= link.gmt_created %></td>
    <td><%= link.view %></td>
    <td><%= link.gmt_modified %></td>
    <td><%= link.catid %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

